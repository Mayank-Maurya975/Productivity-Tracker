{
  "name": "focusflow",
  "version": "1.0.0",
  "description": "A productivity tracking application",
  "author": "FocusFlow Team",
  "type": "module",
  "main": "main.cjs",

  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "electron": "electron .",
    "start": "npm run build:web && electron .",
    "dist": "npm run build:web && electron-builder"
  },

  "build": {
    "appId": "com.focusflow.app",
    "productName": "FocusFlow",

    "directories": {
      "output": "release"
    },

    "files": [
      "dist/**/*",
      "main.cjs",
      "package.json",
      "build/**/*"
    ],

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },

  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "firebase": "^10.0.0",
    "framer-motion": "^10.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "recharts": "^2.7.2"
  },

  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0"
  }
}
